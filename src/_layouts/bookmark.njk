---
layout: base.njk
---
<main class="page">
    {% include "partials/header.njk" %}
    <article class="h-entry container mb-4">
      <div class="mx-auto max-w-40 w-full">
        <h1 class="p-name h1">
          {{ title }}
        </h1>

        {% include "partials/u-url.njk" %}

        <p class="italic">
          <time class="dt-published" datetime="{{ page.date.toISOString() }}">Bookmarked on {{date.toUTCString().substring(0, 16)}}</time>
        </p>
        {% if copyhtml %}
        <p>
          <a href="/html/{{ copyhtml | urlencode }}">Copy</a>
        </p>
        {% endif %}
        <p>
          <a href="{{ bookmarkof }}">Source</a>
        </p>
        <div class="e-content mt-1">
            <div class="mb-1">
            <iframe title="{{ title }}" src="{% if copyhtml %}/html/{{ copyhtml | urlencode}}{% else %}{{ bookmarkof }}{% endif %}"
           width="100%"
    height="500" ></iframe>
            </div>

        {{ content | safe }}
        </div>
      </div>
      {% include "partials/h-card.njk" %}
    </article>
</main>
