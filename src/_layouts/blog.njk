    {% include "partials/header.njk" %}
    <article class="container">
      <div class="mx-auto max-w-40 w-full">
        <h1 class="h1">
          {{ title }}
        </h1>
        <p class="text-right italic">
          Written on {{date.toUTCString().substring(0, 16)}}
        </p>
        {{ content | safe }}
      </div>
    </article>
</main>
